:root {
    --clr-bg: #05070d;
    --clr-surface: #0b111b;
    --clr-surface-alt: #101823;
    --clr-glow: rgba(109, 242, 214, 0.22);
    --clr-border-strong: rgba(109, 242, 214, 0.28);
    --clr-border: rgba(255, 255, 255, 0.06);
    --clr-text: #f4fbff;
    --clr-muted: rgba(244, 251, 255, 0.65);
    --clr-accent: #6df2d6;
    --font-heading: "Poppins", "Segoe UI", "Helvetica Neue", Arial, sans-serif;
    --font-base: "Inter", "Segoe UI", "Helvetica Neue", Arial, sans-serif;
    --sidebar-width: 260px;
    --content-max-width: 960px;
}

*, *::before, *::after {
    box-sizing: border-box;
}

html, body {
    height: 100%;
}

body {
    margin: 0;
    font-family: var(--font-base);
    color: var(--clr-text);
    background: radial-gradient(circle at top right, rgba(109, 242, 214, 0.12), transparent 45%), var(--clr-bg);
    -webkit-font-smoothing: antialiased;
    text-align: center;
}

a {
    color: inherit;
    text-decoration: none;
}

.app-shell {
    position: relative;
    min-height: 100vh;
    background: linear-gradient(180deg, rgba(5, 10, 16, 0.9), rgba(5, 10, 16, 0.92));
}

.app-shell::after {
    content: "";
    position: absolute;
    inset: 0;
    pointer-events: none;
    background: radial-gradient(circle at 10% 20%, rgba(109, 242, 214, 0.14), transparent 45%), radial-gradient(circle at 80% 0%, rgba(69, 115, 255, 0.12), transparent 40%);
    mix-blend-mode: screen;
    opacity: 0.65;
    z-index: -1;
}

.sidebar {
    position: fixed;
    top: 2.5rem;
    left: 0;
    width: var(--sidebar-width);
    padding: 2rem 2rem 2.75rem;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    background: linear-gradient(200deg, rgba(9, 16, 28, 0.95), rgba(7, 13, 22, 0.92));
    border: 1px solid rgba(109, 242, 214, 0.25);
    border-radius: 26px;
    box-shadow: 0 30px 60px rgba(3, 9, 18, 0.55);
    backdrop-filter: blur(16px);
    transform: translateX(-100%);
    transition: transform 0.35s ease, box-shadow 0.35s ease;
    z-index: 200;
}

.sidebar::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: radial-gradient(circle at 12% 18%, rgba(109, 242, 214, 0.24), transparent 60%),
        radial-gradient(circle at 85% 92%, rgba(67, 179, 255, 0.2), transparent 65%);
    opacity: 0.7;
    pointer-events: none;
}

.sidebar::after {
    content: "›";
    position: absolute;
    top: 50%;
    right: -42px;
    transform: translateY(-50%);
    width: 34px;
    height: 104px;
    display: grid;
    place-items: center;
    border-radius: 16px;
    background: linear-gradient(200deg, rgba(109, 242, 214, 0.68), rgba(67, 179, 255, 0.64));
    color: rgba(5, 18, 24, 0.95);
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    box-shadow: 0 16px 34px rgba(109, 242, 214, 0.35);
    pointer-events: auto;
    cursor: pointer;
    transition: opacity 0.25s ease;
}

.sidebar:hover,
.sidebar:focus-within {
    transform: translateX(0);
    box-shadow: 0 42px 72px rgba(3, 9, 18, 0.65);
}

.sidebar:hover::after,
.sidebar:focus-within::after {
    opacity: 0;
}

.sidebar-inner {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    z-index: 1;
}

.sidebar-brand {
    display: flex;
    align-items: center;
    gap: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
}

.brand-initial {
    width: 52px;
    height: 52px;
    display: grid;
    place-items: center;
    font-weight: 700;
    font-size: 1.3rem;
    color: var(--clr-bg);
    background: linear-gradient(140deg, var(--clr-accent), #43b3ff);
    border-radius: 16px;
    box-shadow: 0 14px 32px rgba(109, 242, 214, 0.45);
}

.brand-text {
    display: flex;
    flex-direction: column;
    font-family: var(--font-heading);
    font-size: 0.85rem;
    color: var(--clr-muted);
}

.brand-text .brand-line:first-child {
    font-size: 1.02rem;
    color: var(--clr-text);
}

.sidebar-nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.85rem;
}

.nav-item a {
    display: grid;
    grid-template-columns: auto 1fr;
    column-gap: 0.9rem;
    row-gap: 0.25rem;
    align-items: center;
    padding: 1rem 1.2rem;
    border-radius: 18px;
    background: rgba(8, 15, 26, 0.55);
    border: 1px solid rgba(109, 242, 214, 0.08);
    transition: border-color 0.2s ease, color 0.2s ease, background 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease;
}

.nav-item a::before {
    content: "";
    width: 7px;
    height: 7px;
    border-radius: 50%;
    background: rgba(244, 251, 255, 0.32);
    display: block;
    grid-row: 1 / span 2;
    box-shadow: 0 0 12px rgba(109, 242, 214, 0.45);
    transition: transform 0.2s ease, background 0.2s ease;
}

.nav-label {
    font-weight: 700;
    font-size: 1rem;
    letter-spacing: 0.14em;
    color: rgba(244, 251, 255, 0.85);
}

.nav-subtitle {
    font-size: 0.68rem;
    letter-spacing: 0.28em;
    text-transform: uppercase;
    color: rgba(244, 251, 255, 0.55);
}

.nav-item a:hover,
.nav-item a:focus {
    color: var(--clr-text);
    border-color: rgba(109, 242, 214, 0.35);
    background: rgba(9, 22, 33, 0.85);
    box-shadow: 0 0 22px rgba(109, 242, 214, 0.25);
    transform: translateX(2px);
}

.nav-item a:hover::before,
.nav-item a:focus::before {
    background: var(--clr-accent);
    transform: scale(1.35);
}

.nav-item.is-active a {
    color: var(--clr-text);
    border-color: rgba(109, 242, 214, 0.5);
    background: rgba(9, 23, 32, 0.95);
    box-shadow: 0 0 24px rgba(109, 242, 214, 0.3);
}

.nav-item.is-active a::before {
    background: var(--clr-accent);
    transform: scale(1.45);
}

.main-content {
    position: relative;
    z-index: 10;
    margin: 0 auto;
    padding: 4rem clamp(2rem, 6vw, 5rem);
    width: min(100%, var(--content-max-width));
    display: flex;
    flex-direction: column;
    gap: 4rem;
    min-height: 100vh;
    align-items: center;
    text-align: center;
}

.main-content::before {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 60% -10%, rgba(31, 82, 120, 0.55), transparent 50%);
    opacity: 0.55;
    pointer-events: none;
}

.main-content > * {
    position: relative;
    z-index: 1;
    width: 100%;
}

.hero {
    text-transform: uppercase;
    letter-spacing: 0.12em;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
}

.hero-label {
    font-size: clamp(1rem, 1.4vw, 1.25rem);
    color: rgba(244, 251, 255, 0.65);
    font-weight: 600;
}

.hero h1 {
    margin: 0;
    font-family: var(--font-heading);
    font-size: clamp(2.75rem, 6vw, 4.75rem);
    font-weight: 700;
    letter-spacing: 0.16em;
}

.hero p {
    margin: 0;
    text-transform: none;
    letter-spacing: 0.02em;
    font-size: clamp(1.05rem, 1.6vw, 1.3rem);
    color: rgba(244, 251, 255, 0.72);
    max-width: 34ch;
}

.section-heading {
    margin-bottom: 2rem;
}

.section-heading p {
    margin: 0;
    color: var(--clr-muted);
    max-width: 44ch;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
}

.about-intro {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
    background: linear-gradient(145deg, rgba(16, 24, 35, 0.72), rgba(10, 18, 29, 0.72));
    border: 1px solid var(--clr-border);
    border-radius: 20px;
    padding: clamp(1.5rem, 4vw, 2rem);
    box-shadow: 0 18px 32px rgba(4, 10, 22, 0.35);
    text-align: center;
    align-items: center;
}

.about-intro p {
    margin: 0;
    color: rgba(244, 251, 255, 0.78);
    line-height: 1.7;
}


.section-subheading {\n    margin: 2rem 0 1.5rem;\n    display: flex;\n    justify-content: center;\n}\n
.section-subheading span {\n    display: inline-flex;\n    align-items: center;\n    gap: 0.6rem;\n    padding: 0.5rem 1.4rem;\n    border-radius: 999px;\n    border: 1px solid rgba(109, 242, 214, 0.4);\n    background: rgba(10, 18, 29, 0.7);\n    box-shadow: 0 12px 26px rgba(109, 242, 214, 0.18);\n    letter-spacing: 0.22em;\n    font-size: 0.78rem;\n    font-weight: 700;\n    text-transform: uppercase;\n    color: rgba(244, 251, 255, 0.85);\n}\n\n.btn-link {
    align-self: center;
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.65rem 1.2rem;
    border-radius: 999px;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    font-size: 0.75rem;
    color: var(--clr-bg);
    background: linear-gradient(135deg, var(--clr-accent), #43b3ff);
    box-shadow: 0 12px 26px rgba(109, 242, 214, 0.35);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.btn-link::after {
    content: "›";
    font-size: 1rem;
    color: inherit;
}

.btn-link:hover,
.btn-link:focus {
    transform: translateY(-2px);
    box-shadow: 0 16px 32px rgba(109, 242, 214, 0.4);
}

.page-hero {
    display: flex;
    flex-direction: column;
    gap: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    align-items: center;
}

.page-hero p {
    margin: 0;
    text-transform: none;
    letter-spacing: 0.04em;
    color: rgba(244, 251, 255, 0.7);
    max-width: 40ch;
}

.bio-section {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    align-items: center;
}

.bio-card {
    background: linear-gradient(150deg, rgba(16, 24, 35, 0.9), rgba(8, 13, 23, 0.92));
    border-radius: 24px;
    border: 1px solid var(--clr-border);
    padding: clamp(1.75rem, 4vw, 2.5rem);
    box-shadow: 0 22px 38px rgba(4, 10, 22, 0.4);
    display: grid;
    justify-items: center;\ngap: 1.5rem;
    text-align: center;
}

.bio-card p {
    margin: 0;
    color: rgba(244, 251, 255, 0.78);
    line-height: 1.75;
}

.feature-grid {
    display: grid;
    gap: 1.75rem;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    justify-content: center;
}

.feature-card {
    background: linear-gradient(160deg, rgba(16, 24, 35, 0.95), rgba(12, 19, 30, 0.95));
    border-radius: 20px;
    border: 1px solid var(--clr-border);
    padding: 1.5rem;
    display: flex;
    align-items: center;\nflex-direction: column;
    gap: 1.2rem;
    box-shadow: 0 24px 40px rgba(4, 10, 22, 0.45);
    position: relative;
    overflow: hidden;
    text-align: center;
}

.feature-card::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    pointer-events: none;
    background: linear-gradient(120deg, transparent, rgba(109, 242, 214, 0.08), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.feature-card:hover::after {
    opacity: 1;
}

.card-visual {
    aspect-ratio: 16 / 10;
    border-radius: 14px;
    background: linear-gradient(150deg, rgba(20, 32, 47, 0.9), rgba(9, 14, 24, 0.9));
    border: 1px solid rgba(109, 242, 214, 0.16);
    position: relative;
    overflow: hidden;
}

.card-visual::after {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at top right, rgba(109, 242, 214, 0.22), transparent 60%);
    opacity: 0.65;
}

.card-visual--typing::before,
.card-visual--terminal::before {
    content: "";
    position: absolute;
    inset: 12% 15%;
    background:
        linear-gradient(90deg, rgba(109, 242, 214, 0.35) 0 12%, transparent 12% 100%),
        linear-gradient(180deg, rgba(109, 242, 214, 0.6) 0 12%, transparent 12% 100%);
    background-size: 22px 100%, 100% 18px;
    opacity: 0.85;
}

.card-visual--rain::before {
    content: "";
    position: absolute;
    inset: 8% 20%;
    background:
        linear-gradient(180deg, rgba(109, 242, 214, 0.12) 0%, transparent 60%),
        radial-gradient(circle at 35% 25%, rgba(109, 242, 214, 0.4) 0 35%, transparent 36%);
    background-size: 4px 48px, 120px 120px;
    background-repeat: repeat, no-repeat;
    opacity: 0.8;
}

.card-visual--gauge::before {
    content: "";
    position: absolute;
    inset: 18% 18%;
    border-radius: 50%;
    border: 2px solid rgba(109, 242, 214, 0.35);
    box-shadow: 0 0 0 8px rgba(109, 242, 214, 0.06);
}

.card-visual--gauge::after {
    content: "";
    position: absolute;
    width: 46%;
    height: 2px;
    top: 50%;
    left: 27%;
    transform-origin: left center;
    transform: rotate(32deg);
    background: linear-gradient(90deg, rgba(109, 242, 214, 0.8), transparent);
    box-shadow: 0 0 18px rgba(109, 242, 214, 0.6);
}

.card-body h3 {
    margin: 0 0 0.35rem;
    font-family: var(--font-heading);
    font-size: 1.15rem;
    letter-spacing: 0.06em;
}

.card-body p {
    margin: 0;
    color: var(--clr-muted);
    line-height: 1.6;
}

.placeholder-section {
    display: none;
}

.site-footer {
    margin-top: auto;
    padding: 3rem 0 1.5rem;
    font-size: 0.85rem;
    color: rgba(244, 251, 255, 0.45);
    letter-spacing: 0.12em;
    text-transform: uppercase;
}

.site-footer p {
    margin: 0;
}

@media (max-width: 1080px) {
    :root {
        --nav-width: 240px;
    }

    .sidebar {
        position: sticky;
        top: 1.5rem;
        left: auto;
        width: auto;
        margin: 0 clamp(1.5rem, 4vw, 2.5rem);
        padding: 1.75rem clamp(1.5rem, 4vw, 2.5rem);
        flex-direction: column;
        border-radius: 22px;
        transform: none;
        box-shadow: 0 26px 48px rgba(3, 9, 18, 0.45);
    }

    .sidebar::before {
        opacity: 0.55;
    }

    .sidebar::after {
        display: none;
    }

    .sidebar-inner {
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .sidebar-nav ul {
        flex-direction: row;
        flex-wrap: wrap;
        gap: 0.65rem;
        justify-content: center;
    }

    .nav-item a {
        padding: 0.85rem 1rem;
        border-radius: 14px;
    }

    .main-content {
        margin: 2.5rem auto;
        padding: 3.25rem clamp(1.5rem, 5vw, 3.5rem);
        align-items: center;
        text-align: center;
    }

    .main-content > * {
        margin: 0 auto;
    }
}

@media (max-width: 720px) {
    :root {
        --nav-width: 220px;
    }

    .sidebar {
        position: sticky;
        margin: 0 clamp(1rem, 5vw, 1.75rem);
        padding: 1.5rem clamp(1.25rem, 5vw, 1.75rem);
    }

    .sidebar-inner {
        gap: 1.25rem;
        justify-content: center;
    }

    .sidebar-nav ul {
        gap: 0.5rem;
        justify-content: center;
    }

    .nav-item a {
        padding: 0.75rem 0.9rem;
        font-size: 0.95rem;
        letter-spacing: 0.1em;
    }

    .main-content {
        margin: 2rem auto 3rem;
        padding: 2.75rem clamp(1.25rem, 6vw, 2rem) 3.25rem;
        gap: 3rem;
    }

    .feature-grid {
        grid-template-columns: minmax(0, 1fr);
    }

    .hero h1 {
        font-size: clamp(2.25rem, 10vw, 3.4rem);
    }

    .page-hero {
        letter-spacing: 0.1em;
    }
}








